{
	"extends": "eslint:recommended",
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"jquery": true,
		"es6": true
	},
	"rules": {
		"semi": [2, "always"],
		"indent": [2, "tab", {
			"SwitchCase": 1
		}],
		"no-var": 1,
		"prefer-const": 1,
		"no-const-assign": 2,
		"no-console": 0,
		"no-trailing-spaces": 1,
		"space-before-blocks": 1,
		"space-before-function-paren": 1,
		"keyword-spacing": 1,
		"space-infix-ops": 1
	}
}