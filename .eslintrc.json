{
	"extends": ["eslint:recommended", "happiness"],
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"jquery": true,
		"es6": true
	},
	"rules": {
		"curly": [1, "multi-or-nest"],
		"semi": [1, "always"],
		"indent": [1, "tab", {
			"SwitchCase": 1
		}],
		"no-var": 1,
		"no-unused-vars": 1,
		"prefer-const": 1,
		"no-console": 0,
		"no-trailing-spaces": 1,
		"space-before-blocks": 1,
		"space-before-function-paren": 1,
		"keyword-spacing": 1,
		"space-infix-ops": 1,
		"spaced-comment": [1, "always", { "exceptions": ["/", "*"] }]
	}
}